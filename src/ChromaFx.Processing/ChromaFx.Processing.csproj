<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <PackageIcon>icon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>ChromaFx.Processing</Title>
    <Authors>Ho Tzin Mein</Authors>
    <Description>Image processing algorithms and effects for ChromaFx. Includes transformations, filters, and pixel-level operations for high-performance image workflows.</Description>
    <Copyright>Copyright $([System.DateTime]::Now.Year) Ho Tzin Mein</Copyright>
    <PackageProjectUrl>https://github.com/chromafx/chromafx</PackageProjectUrl>
    <RepositoryUrl>https://github.com/chromafx/chromafx</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>image graphics bitmap png jpeg gif drawing effects imageprocessing dotnet csharp chromafx</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\assets\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ChromaFx.Core\ChromaFx.Core.csproj" />
  </ItemGroup>

</Project>
